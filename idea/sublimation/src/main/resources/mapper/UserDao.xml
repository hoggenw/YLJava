    <select id="queryByUserPhone" resultType="com.hoggen.sublimation.entity.User" parameterType="String">
        SELECT
        user_id,
        user_name,
        password,
        mobile,
        avatar,
        random_string,
        status,
        create_time,
        last_login_time,
        update_time,
        role_type
        FROM
        tb_user
        WHERE
		mobile = #{mobile}
    </select>


    <select id="queryByUserId" resultType="com.hoggen.sublimation.entity.User" parameterType="Long">
        SELECT
        user_id,
        user_name,
        password,
        mobile,
        avatar,
        random_string,
        status,
        create_time,
        last_login_time,
        update_time,
        role_type
        FROM
        tb_user
        WHERE
		user_id = #{userId}
    </select>


    <insert id="insertUser" parameterType="com.hoggen.sublimation.entity.User"
            useGeneratedKeys="true" keyProperty="userId" keyColumn="user_id">
        <selectKey keyProperty="userId" order="AFTER" resultType="java.lang.Long">
            <!-- SELECT LAST_INSERT_ID()：得到刚insert到数据表中的记录的主键值，只适用于自增主键 -->
            SELECT LAST_INSERT_ID()
        </selectKey>
		INSERT INTO
		tb_user(user_id,
        user_name,
        password,
        mobile,
        avatar,
        random_string,
        status,
        create_time,
        last_login_time,
        update_time,
        role_type)
		VALUES
		(#{userName},#{password},#{mobile},
		#{avatar},#{randomString},#{status},#{createTime},
		#{lastLoginTime},#{updateTime},#{roleType})
	</insert>


